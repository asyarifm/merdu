<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Merdu" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_primary</item>
        <item name="colorPrimaryVariant">@color/black_primary_variant</item>
        <item name="colorOnPrimary">@color/gray</item>

        <!-- do not change anything for dark theme -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <!--    splash theme-->
    <style name="SplashTheme" parent="Theme.Merdu">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--    text appearance-->
    <style name="SongTitleTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/h1_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="ArtistNameTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/h2_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="AlbumNameTextStyle">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/h3_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>